@model inxhsofti.Models.RegisterViewModel

@{
    ViewData["Title"] = "Regjistrohu";
}

<style>
    .auth-container {
        max-width: 500px;
        margin: 60px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

    .auth-title {
        text-align: center;
        margin-bottom: 30px;
        color: #4c6ef5;
        font-weight: 600;
    }

    .auth-form .form-group {
        margin-bottom: 20px;
    }

    .auth-form label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #343a40;
    }

    .auth-form input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .auth-form input:focus {
            outline: none;
            border-color: #4c6ef5;
            box-shadow: 0 0 0 3px rgba(76, 110, 245, 0.1);
        }

    .auth-form button {
        width: 100%;
        padding: 12px;
        background-color: #4c6ef5;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s;
        margin-top: 10px;
    }

        .auth-form button:hover {
            background-color: #3b5bdb;
        }

    .auth-error {
        color: #fa5252;
        font-size: 14px;
        margin-top: 20px;
        padding: 10px;
        border: 1px solid #fa5252;
        border-radius: 5px;
        background-color: rgba(250, 82, 82, 0.05);
        text-align: center;
    }

    .validation-message {
        color: #fa5252;
        font-size: 14px;
        margin-top: 5px;
    }

    .auth-link {
        text-align: center;
        margin-top: 20px;
    }

        .auth-link a {
            color: #4c6ef5;
            text-decoration: none;
            font-weight: 500;
        }

            .auth-link a:hover {
                text-decoration: underline;
            }
</style>

<div class="auth-container">
    <h2 class="auth-title">Krijoni llogari të re</h2>
    <form class="auth-form" asp-action="Register" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="auth-error"></div>

        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="email" required />
            <span asp-validation-for="Email" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Fjalëkalimi:</label>
            <input asp-for="Password" type="password" required />
            <span asp-validation-for="Password" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Konfirmo fjalëkalimin:</label>
            <input asp-for="ConfirmPassword" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
        </div>

        <div class="form-group">
            <button type="submit">Regjistrohuni</button>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="auth-error">@ViewBag.Error</div>
        }

        <div class="auth-link">
            <a href="/Account/Login">Keni një llogari? Hyni këtu</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
