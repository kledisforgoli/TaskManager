@model inxhsofti.Models.TaskItem
@{
    ViewData["Title"] = "Fshi Detyrën";
}

<div class="container py-4">
    
    <div class="mb-4">
        <h2 class="mb-0 text-primary">
            <i class="fas fa-trash me-2"></i>Fshi Detyrën
        </h2>
        <p class="text-muted small mt-1">
            Konfirmoni fshirjen e detyrës
        </p>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-6 mx-auto">
            
            <div class="card shadow-sm border-danger mb-4">
                <div class="card-body text-center py-4">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    <h4 class="mt-3 text-danger">A je i sigurt që do ta fshish këtë detyrë?</h4>
                    <p class="text-muted">Ky veprim nuk mund të kthehet mbrapsht.</p>
                </div>
            </div>

            
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-clipboard-list me-2"></i>Detajet e detyrës
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="d-flex border-bottom pb-2 mb-2">
                                    <div class="fw-bold text-muted" style="width: 120px;">
                                        <i class="fas fa-heading me-1"></i> Titulli:
                                    </div>
                                    <div class="fw-bold">@Model.Title</div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="d-flex border-bottom pb-2 mb-2">
                                    <div class="fw-bold text-muted" style="width: 120px;">
                                        <i class="fas fa-align-left me-1"></i> Përshkrimi:
                                    </div>
                                    <div>@Model.Description</div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="d-flex border-bottom pb-2 mb-2">
                                    <div class="fw-bold text-muted" style="width: 120px;">
                                        <i class="fas fa-calendar me-1"></i> Afati:
                                    </div>
                                    <div>
                                        @if (Model.DueDate.HasValue)
                                        {
                                            var isPastDue = Model.DueDate < DateTime.Today && !Model.IsCompleted;
                                            <span class="@(isPastDue ? "text-danger" : "")">
                                                @if (isPastDue)
                                                {
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                }
                                                @Model.DueDate?.ToShortDateString()
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Pa afat</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="d-flex">
                                    <div class="fw-bold text-muted" style="width: 120px;">
                                        <i class="fas fa-check-circle me-1"></i> Statusi:
                                    </div>
                                    <div>
                                        @if (Model.IsCompleted)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check me-1"></i> E përfunduar</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-hourglass-half me-1"></i> E papërfunduar</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            
            <form asp-action="DeleteConfirmed" class="mb-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Jo, kthehu
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Po, fshije
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}